<h1>This page is designed for accounting </h1>
<h1>Room Cost And Earning Reports</h1>
<hr style='background-color:#3399FF;border-width:0;color:#3399FF;height:2px;line-height:5;text-align:left;width:94%;'/>


<div class="container-fluid"> 
	<div class="row">

   		<div class="col-sm-6" style="background-color:none;">
   		<h3>Earnings</h3>
   		<hr style='background-color:#3399FF;border-width:0;color:#3399FF;height:2px;line-height:5;text-align:left;width:99%;'/>

   		<p>
      <% @earnings = Earning.all %>

          <table class="table table-hover">
            <thead>
              <tr>
                <th>Paid on</th> 
                <th>Member BD</th> 
                <th> Rank</th>
                <th>Member Name</th> 
                <th>Amount</th> 
                

                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @earnings.each do |earning| %>
                <tr>
                  <td><%= earning.created_at.strftime("%d/%m/%Y") %>
                  <td><%= Earning.find(earning.id).member.bd %></td>
                  <td><%= Earning.find(earning.id).member.rank %></td>
                   <td><%= Earning.find(earning.id).member.name %></td>
                  <td><%= earning.amount %></td>
                  
                </tr>
              <% end %>
            </tbody>
          </table>


   		</p>


 		</div>

    	<div class="col-sm-6" style="background-color:none;">
    	<h3>Expenses</h3>
    	<hr style='background-color:#3399FF;border-width:0;color:#3399FF;height:2px;line-height:5;text-align:left;width:99%;'/>

    	<p>
         
        <% @costs = Cost.all %>
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Date</th>
                <th>Occasion</th>
                <th>Amount</th>
                <th>description</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @costs.each do |cost| %>
                <tr>
                  <td><%= cost.created_at.strftime("%d/%m/%Y")%></td>
                  <td><%= cost.occasion %></td>
                  <td><%= cost.amount %></td>
                  <td><%= truncate(cost.description, length: 15) %></td>
                  </td>
                </tr>

              <% end %>
              <tr>
                <td>Total Cost</td>
                <td></td>
                <td><%= cost_total %></td>
                <td></td>

              </tr>
            </tbody>

          </table>
    	</p>


    </div>
    
  </div>
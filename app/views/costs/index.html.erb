<p id="notice"><%= notice %></p>

<h1>Listing Costs</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Date</th>
      <th>Reason</th>
      <th>Amount</th>
      <th>description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @costs.each do |cost| %>
      <tr>
        <td><%= cost.created_at.strftime("%d/%m/%Y") %></td>
        <td><%= cost.occasion %></td>
        <td><%= cost.amount %></td>
        <td><%= truncate(cost.description, length: 50) %></td>
        <td><%= link_to 'Show', cost %></td>
        <td><%= link_to 'Edit', edit_cost_path(cost) %></td>
        <td><%= link_to 'Destroy', cost, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>

    
    <% end %>
  </tbody>
</table>


<br>


<%= link_to 'New Cost', new_cost_path, class: "btn btn-primary"  %>

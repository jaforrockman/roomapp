<p id="notice"><%= notice %></p>

<h1>Listing Members</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Image</th>
      <th>Bd</th>
      <th>Rank</th>
      <th>Name</th>
      <th>Trade</th>
      <th>Section</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td width="100px"><%= image_tag member.image, style: "width:100%" %></td>
        <td><%= member.bd %></td>
        <td><%= member.rank %></td>
        <td><%= member.name %></td>
        <td><%= member.trade %></td>
        <td><%= member.section %></td>
        <td><%= link_to 'Show', member, class: "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_member_path(member) , class: "btn btn-primary"%></td>
        <td><%= link_to 'Destroy', member, class: "btn btn-primary", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Member', new_member_path, class: "btn btn-primary" %>
